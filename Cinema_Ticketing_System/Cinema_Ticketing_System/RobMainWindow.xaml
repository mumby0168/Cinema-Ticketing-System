<Window x:Class="Cinema_Ticketing_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cinema_Ticketing_System"
        xmlns:vms="clr-namespace:Cinema_Ticketing_System.ViewModels.Screen"
        xmlns:screen="clr-namespace:Cinema_Ticketing_System.Elements.Screen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vms:ScreenViewModel/>
    </Window.DataContext>
    <Grid>
        <screen:Screen Visibility="{Binding Path=ScreenVisibility, UpdateSourceTrigger=PropertyChanged}" NumberOfColumns="{Binding Path=NumberOfColumns, UpdateSourceTrigger=PropertyChanged}" NumberOfRows="{Binding Path=NumberOfRows, UpdateSourceTrigger=PropertyChanged}"  ExsistingTickets="{Binding Path=ExsistingTickets, UpdateSourceTrigger=PropertyChanged}" PendingTickets="{Binding Path=PendingTickets, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
