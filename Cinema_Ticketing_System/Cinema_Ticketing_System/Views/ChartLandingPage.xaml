<UserControl x:Class="Cinema_Ticketing_System.Views.ChartLandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cinema_Ticketing_System.Views"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Margin="15" Grid.Column="0" Content="Chart 1"></Button>
            <Button Margin="15" Grid.Column="1" Content="Chart 2"></Button>
            <Button Margin="15" Grid.Column="2" Content="Chart 3"></Button>
            <Button Margin="15" Grid.Column="3" Content="Chart 4"></Button>
        </Grid>


        <Grid>
            
        </Grid>
        

    </Grid>
</UserControl>
